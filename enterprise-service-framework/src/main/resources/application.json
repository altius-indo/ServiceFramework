{
  "server": {
    "host": "0.0.0.0",
    "port": 8080,
    "ssl": false
  },
  "database": {
    "dynamodb": {
      "endpoint": "http://localhost:8000",
      "region": "us-east-1",
      "tableName": "enterprise-data"
    }
  },
  "redis": {
    "host": "localhost",
    "port": 6379
  },
  "auth": {
    "jwt": {
      "secret": "change-this-secret-in-production",
      "issuer": "enterprise-framework",
      "expirationSeconds": 3600
    }
  },
  "circuit-breaker": {
    "maxFailures": 5,
    "timeout": 10000,
    "resetTimeout": 30000
  },
  "health": {
    "path": "/health",
    "port": 8081
  },
  "metrics": {
    "enabled": true
  }
}
